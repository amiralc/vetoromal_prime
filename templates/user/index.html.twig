{% extends 'dashboard/index.html.twig' %}

{% block title %}Liste des users{% endblock %}

{% block body %}
    <h1>la liste Des  Utilisateurs </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenoms</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Num√©ro</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.num }}</td>
                <td>{{ user.password }}</td>
                <td>
                    <a href="{{ path('app_user_delete', {'id': user.id}) }}">Delete</a>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Se Connecter</a>
{% endblock %}
