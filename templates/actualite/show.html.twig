{% extends 'base.html.twig' %}

{% block title %}Actualite{% endblock %}

{% block body %}
    <h1>Actualite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actualite.id }}</td>
            </tr>
            <tr>
                <th>Theme</th>
                <td>{{ actualite.theme }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ actualite.image }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ actualite.contenu }}</td>
            </tr>
            <tr>
                <th>Nbr_Vue</th>
                <td>{{ actualite.nbrVue }}</td>
            </tr>
            <tr>
                <th>Date_Creation</th>
                <td>{{ actualite.dateCreation ? actualite.dateCreation|date('Y-m-d') : '' }}</td>
