{% extends 'front/base.html.twig' %}

{% block title %}Operation index{% endblock %}

{% block body %}
    <h1>Operation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date_operation</th>
                <th>Type_operation</th>
                <th>Nom_medecin</th>
                <th>Cout_operation</th>
                <th>Note_operation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for operation in operations %}
            <tr>
                <td>{{ operation.id }}</td>
                <td>{{ operation.dateOperation ? operation.dateOperation|date('Y-m-d') : '' }}</td>
                <td>{{ operation.typeOperation }}</td>
                <td>{{ operation.nomMedecin }}</td>
                <td>{{ operation.coutOperation }}</td>
                <td>{{ operation.noteOperation }}</td>
                <td>
                    <a href="{{ path('app_operation_show', {'id': operation.id}) }}">show</a>
                    <a href="{{ path('app_operation_edit', {'id': operation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_operation_new') }}">Create new</a>
{% endblock %}
