{% extends 'front/base.html.twig' %}



{% block body %}
    <h1>Create new Rendez-Vous</h1>

    <div class="content-page">
        <!-- Start content -->
        <div class="content">
            <div class="container-fluid">


                <div class="row">
                    <div class="col-md-12"  style="display: flex; justify-content: center;align-items:center;width: 100%" >
                        <div class="card-box">
                            <div class="dropdown pull-right">
                                <a href="#" class="dropdown-toggle arrow-none card-drop" data-toggle="dropdown" aria-expanded="false">
                                    <i class="mdi mdi-dots-vertical"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <!-- item-->
                                    <a href="javascript:void(0);" class="dropdown-item">Action</a>
                                    <!-- item-->
                                    <a href="javascript:void(0);" class="dropdown-item">Another action</a>
                                    <!-- item-->
                                    <a href="javascript:void(0);" class="dropdown-item">Something else</a>
                                    <!-- item-->
                                    <a href="javascript:void(0);" class="dropdown-item">Separated link</a>
                                </div>
                            </div>


                            {{ form_start(form, {'attr': {novalidate: 'novalidate'}}) }}


                            <div class="form-group">
                                <label for="nom">Date</label>

                                {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.date, {'attr': {'class': 'text-danger'}}) }}


                            </div>
                            <div class="form-group">
                                <label for="nom">Dur√©e</label>

                                <div class="form-group">
                                    {{ form_widget(form.duree, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.duree, {'attr': {'class': 'text-danger'}}) }}



                                </div>
                                <div class="form-group">

                                    <label for="nom">Animal</label>

                                    {{ form_widget(form.animal, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.animal, {'attr': {'class': 'text-danger'}}) }}


                                </div>








                                <div class="form-group text-right m-b-0">
                                    <button class="btn">{{ button_label|default('Save') }}</button>
                                    <button type="reset" class="btn btn-secondary waves-effect waves-light m-l-5">Reset
                                    </button>

                                    <button class="btn btn-check">
                                        <a href="{{ path('app_template') }}">back to home</a></button>


                                </div>

                                {{form_end(form)}}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
