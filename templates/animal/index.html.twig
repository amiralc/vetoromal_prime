                        </div>
                    </div>
                    <h4 class="m-t-0 header-title">List Animal</h4>
                    <p class="text-muted font-14 m-b-20">


                    <table class="table">
                        <thead>
                        <tr>

                            <th>Nom</th>
                            <th>Race</th>
                            <th>Genre</th>
                            <th>Age</th>
                            <th>Description</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for animal in animals %}
                            <tr>

                                <td>{{ animal.nom }}</td>
                                <td>{{ animal.race }}</td>
                                <td>{{ animal.genre }}</td>
                                <td>{{ animal.age }}</td>
                                <td>{{ animal.description }}</td>
                                <td>
                                    <a href="{{ path('app_animal_edit', {'id': animal.id}) }}"> <button class="btn btn-success" > update</button></a>


                                    <a href="{{ path('app_animal_show', {'id': animal.id}) }}"><button class="btn btn-dark" > show</button></a>
                                    <a href="{{ path('app_animal_delete', {'id': animal.id}) }}"><button class="btn btn-dark" > delete</button></a>
                                </td>
                            </tr>

                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>



{% endblock %}