{% extends 'dashboard/index.html.twig' %}



{% block body %}
    <h1>Edit Animal</h1>

<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">


            <div class="row">
                <div class="col-md-12"  style="display: flex; justify-content: center;align-items:center;width: 100%" >
                    <div class="card-box">
                        <div class="dropdown pull-right">
                            <a href="#" class="dropdown-toggle arrow-none card-drop" data-toggle="dropdown" aria-expanded="false">
                                <i class="mdi mdi-dots-vertical"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <!-- item-->
                                <a href="javascript:void(0);" class="dropdown-item">Action</a>
                                <!-- item-->
                                <a href="javascript:void(0);" class="dropdown-item">Another action</a>
                                <!-- item-->
                                <a href="javascript:void(0);" class="dropdown-item">Something else</a>
                                <!-- item-->
                                <a href="javascript:void(0);" class="dropdown-item">Separated link</a>
                            </div>
                        </div>


                        {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}


                        <div class="form-group">
                            <label for="nom">Nom</label>

                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nom, {'attr': {'class': 'text-danger'}}) }}


                        </div>
                        <div class="form-group">
                            <label for="nom">Race</label>

                            <div class="form-group">
                                {{ form_widget(form.race, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.race, {'attr': {'class': 'text-danger'}}) }}



                            </div>
                            <div class="form-group">

                                <label for="nom">Genre</label>

                                {{ form_widget(form.genre, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.genre, {'attr': {'class': 'text-danger'}}) }}


                            </div>
                            <div class="form-group">

                                <label for="nom">Age</label>


                                {{ form_widget(form.age, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.age, {'attr': {'class': 'text-danger'}}) }}

                            </div>


                            <div class="form-group">

                                <label for="nom">Description</label>


                                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.description, {'attr': {'class': 'text-danger'}}) }}

                            </div>

                            <div class="form-group text-right m-b-0">
                                <button class="btn">{{ button_label|default('update') }}</button>



                                <button class="btn btn-check">
                                    <a href="{{ path('app_animal_index') }}">back to list</a></button>

                            </div>
                            {{form_end(form)}}

                        </div>
                    </div>
                </div>
            </div>
        </div>

    <a  href="{{ path('app_animal_index') }}">back to list</a>


{% endblock %}
